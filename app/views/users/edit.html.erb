<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>

     <div class="form-group">
      <%= f.label :Name %><br />
      <%= f.text_field :name, autofocus: true, id:"inputName",placeholder:"名前" %>
     </div>
     <div class="form-group">

        <label for="user_image">Image</label>
         <%= f.attachment_field :profile_image %>
      </div>
      <div class="form-group">
       <%= f.label :Introduction %><br />
       <%= f.text_field :introduction, autofocus: true, id:"user_introduction",class:'form-control introduction' %>
      </div>
      <div class="form-group">
        <input type="submit" name="commit" value="Update User" class="btn btn-secondary" data-disable-with="Update User">
      </div>
      <% end %>
</form>  </div>
</div>

      </div>