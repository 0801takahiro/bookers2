<p id="notice"></p>
<div class="container px-5 px-sm-0">
 <div class="row">


<%= render 'users/info', user: @user, book: @book %>

<div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
   <td>
    <%= book.user.name %>

   </td>
    <td><%= link_to book.title,book_path(book.id) %></td>
   <td>
     <%= book.body %>
   </td>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>